{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
                // "--noreload",
                "--nothreading",
                "0.0.0.0:8000"
            ],
            "django": true,
            "env": {
                "DJANGO_SETTINGS_MODULE": "restaurant_go.settings"
            },
            "stopOnEntry": false,
        }
    ]
}
